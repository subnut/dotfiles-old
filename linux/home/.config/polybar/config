[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}
;format-underline = #0a6cf5

label = %{T4}%date% %time% %{T-}

[module/mydate2]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix =
format-prefix-foreground = ${colors.foreground-alt}
;format-underline = #0a6cf5

label = %{T4}%date% %time% %{T-}

[module/mycustomtime]
type=custom/script
exec = date +%H:%M ; while sleep $(( 60 - `date +%S` )); do date +%H:%M ; done
tail=true
label=" %{T4}%output%%{T-} "


[module/mydate3]
type = internal/date
interval = 5

;date =%A, %b %d
date =%a %b %d
date-alt = " %Y-%m-%d"

time =
time-alt = %H:%M:%S

format-prefix =
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #0a6cf5

label = %{T1}%date%%{T-}



