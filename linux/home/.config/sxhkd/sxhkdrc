XF86Favorites
	if pacmd info | grep -q 'suspend cause: USER';then pacmd 'suspend 0';pactl set-sink-mute 1 0;if [[ -a sink-suspend-notification.id ]];then notify-send.sh -u low -t 100 'Sinks RESUMED' -i speaker -R sink-suspend-notification.id -a pulseaudio;rm sink-suspend-notification.id;else notify-send.sh -u low 'Sinks RESUMED' -t speaker -a pulseaudio;fi;else;pacmd 'suspend 1';pactl set-sink-mute 1 1;notify-send.sh -u critical 'Sinks SUSPENDED' -i speaker -t 0 -a pulseaudio -R sink-suspend-notification.id;fi
#	zsh temp_toggle &> /dev/null
#zsh <<< 'if pacmd info | grep -q "suspend cause: USER"; then; pacmd "suspend 0"; pactl set-sink-mute 1 0; if [[ -a sink-suspend-notification.id ]] ; then notify-send.sh -u low -t 100 "Sinks RESUMED" -i speaker -r \$(cat sink-suspend-notification.id) -a pulseaudio ; rm sink-suspend-notification.id; else notify-send.sh -u low "Sinks RESUMED" -t speaker -a pulseaudio; fi; else; pacmd "suspend 1"; pactl set-sink-mute 1 1; notify-send.sh -u critical "Sinks SUSPENDED" -i speaker -t 0 -a pulseaudio $(if [[ -a sink-suspend-notification.id ]] ; then echo -n "-r "; cat sink-suspend-notification.id ; fi) -p > sink-suspend-notification.id ; fi'

XF86Bluetooth
	zsh <<< 'sleep 0.1 && if [[ $(bluetooth | cut -d"=" -f2 | cut -d" " -f2) =~ off ]] ; then if [[ -a bluetooth-on-notification.id ]] ; then notify-send.sh -u low -t 100 "Bluetooth turned OFF" -i bluetooth -r $(cat bluetooth-on-notification.id) -a Bluetooth ; rm bluetooth-on-notification.id; else notify-send.sh -u low "Bluetooth turned OFF" -t bluetooth -a Bluetooth; fi; else notify-send.sh -u critical "Bluetooth turned ON" -i bluetooth -t 0 -a Bluetooth -p > bluetooth-on-notification.id; fi'


# Switch temporarily to desktop T
super + d
	if [[ $(bspc query --desktops --names -m focused -d focused | cut -d'_' -f2) == T ]]; \
	then bspc desktop older -f; \
	else; \
	bspc desktop -f $(bspc query --desktops --names -m focused -d focused | cut -d'_' -f1)_T; \
	fi


# Add a temporary desktop / remove the first unoccupied temporary desktop
super + {ctrl,shift} + n
	MONITOR=$(bspc query -M -m focused --names); bspc {monitor -a "$MONITOR"_temp,desktop "$MONITOR"_temp.!occupied.local -r}

# Emoji input
super + semicolon
	while true; do; \
	emoji="$(jome)";\
	if [ $? -ne 0 ]; then exit 1; fi;\
	sleep 0.5;\
	xdotool type "$emoji";\
	done

super + {ctrl,shift} + semicolon
	emoji="$(jome)";\
	if [ $? -ne 0 ]; then exit 1; fi;\
	sleep 0.6;\
	xdotool type "$emoji"

# Temp Zoom shortcut
ctrl + super + Return; z
	/home/subhaditya/Downloads/zoom_x86_64.pkg/opt/zoom/my_zoom.sh &> /dev/null &

#
# Multi-monitor control
#
 
# Swap focused desktop with focused desktop of last monitor
super + ctrl + grave
	bspc desktop -s $(bspc query --desktops --names -d last:focused) --follow || if bspc query -N -n .sticky -d focused; then notify-send "Sticky node present. Can't swap." -a "bspwm" -t 1000 -u critical; else notify-send "Self-swap not allowed" -a "bspwm" -t 1000 -u critical; fi

# Focus Monitors
super + ctrl + {_,shift + }Tab
	bspc monitor -f {next,prev}

# Lock screen
super + Print
	i3lock -c 00000000 -k --pass-media-keys --pass-screen-keys  --radius 180 --ring-width 20 --linecolor 00000000 --ringcolor=ffffff --keyhlcolor=000000 --insidecolor=ffffff --indicator --ringwrongcolor ff2134  --separatorcolor 00000000 --ringvercolor 008cf7 --insidevercolor 008cf7 --insidewrongcolor ff2134 --pass-power-keys --refresh-rate=0.5 --bshlcolor=ff2134

# Screenshot
Print
	flameshot gui &

super + Home 
	kill -s USR1 $(pidof deadd-notification-center)

